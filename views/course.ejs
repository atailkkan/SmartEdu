<!DOCTYPE html>
<html lang="en">

	<%- include('./partials/_header') %>

</head>
<body class="host_version"> 

    <%- include('./partials/_preloader') %>

    <%- include('./partials/_navigation') %>
	
	<div class="all-title-box">
		<div class="container text-center">
			<h1><%= course.name %><span class="m_1">Lorem Ipsum dolroin gravida nibh vel velit.</span></h1>
		</div>
	</div>
	
    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-9 blog-post-single">
                    <div class="blog-item">
						<div class="image-blog">
							<img src="/images/blog_single.jpg" alt="" class="img-fluid">
						</div>
						<div class="post-content">

							<% if(user && !user.courses.includes(course._id)) { %> 
							<div class="post-date">
								<form method="post" action="/courses/enroll">
									<input type="hidden" name="courseId" value="<%= course._id %>">
									<button type="submit" class="btn btn-warning text-white">Enroll Course</button>
								</form>
							</div>
							<% } %>

							<div class="meta-info-blog">
								<span><i class="fa fa-calendar"></i> <a href="#">May 11, 2015</a> </span>
							</div>
							<div class="blog-title">
								<h2><a href="javascript:;" title=""><%= course.name %></a></h2>
							</div>
							<div class="blog-desc">
								<p><blockquote class="bg-white border-warning"><%= course.description %></blockquote></p>
							</div>							
						</div>
					</div>
					
					<div class="blog-author">
						<div class="author-bio">
							<h3 class="author_name"><a href="#"><%= course.user.name %></a></h3>
							<h5><a href="mailto:<%= course.user.email %>"><%= course.user.email %></a></h5>
							<p class="author_det">
								Lorem ipsum dolor sit amet, consectetur adip, sed do eiusmod tempor incididunt  ut aut reiciendise voluptat maiores alias consequaturs aut perferendis doloribus omnis saperet docendi nec, eos ea alii molestiae aliquand.
							</p>
						</div>
						<div class="author-desc">
							<img src="/images/author.jpg" alt="about author">
						</div>
					</div>
					
                </div><!-- end col -->
				<div class="col-lg-3 col-12 right-single">
					<div class="widget-search">
						<div class="site-search-area">
							<form method="get" id="site-searchform" action="/courses">
								<div>
									<input class="input-text form-control" name="search" id="search" placeholder="Search..." type="text">
									<button id="searchsubmit" value="Search" type="submit"></button>
								</div>
							</form>
						</div>
					</div>
					<div class="widget-categories">
						<h3 class="widget-title">Categories</h3>
						<ul>
							<% categories.forEach(category => { %> 
							<li><a href="/courses?category=<%= category.slug %>"><%= category.name %></a></li>
							<% }) %>
						</ul>
					</div>
				</div>
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->

    <%- include('./partials/_footer') %>

    <%- include('./partials/_script') %>

</body>
</html>